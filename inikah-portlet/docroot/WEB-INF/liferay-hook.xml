<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.2.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">

<hook>
	<portal-properties>portal.properties</portal-properties>
	<language-properties>
		content/Language_en.properties
	</language-properties>
	
	<service>
		<service-type>
			com.liferay.portal.service.UserLocalService
		</service-type>
		<service-impl>
			com.liferay.portal.service.ExtUserLocalService
		</service-impl>
	</service>	
	
	<struts-action>
		<struts-action-path>/login/create_account</struts-action-path>
		<struts-action-impl>com.liferay.portlet.login.action.CreateAccountAction2</struts-action-impl>
	</struts-action>
</hook>