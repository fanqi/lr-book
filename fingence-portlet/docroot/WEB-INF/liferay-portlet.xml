<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>register</portlet-name>
		<icon>/icon.png</icon>
		
		<scheduler-entry>
			<scheduler-event-listener-class>com.fingence.jobs.UpdateXRates</scheduler-event-listener-class>
			<trigger>
				<cron>
					<cron-trigger-value>0 0/2 * 1/1 * ? *</cron-trigger-value>
				</cron>
			</trigger>
		</scheduler-entry>
		
		<action-url-redirect>true</action-url-redirect>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<css-class-wrapper>register-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>report</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-css>
			http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css
		</footer-portlet-css>
		<footer-portlet-javascript>
			/js/accounting.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			http://code.highcharts.com/highcharts.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			http://ajax.googleapis.com/ajax/libs/mootools/1.4.5/mootools-yui-compressed.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			http://code.highcharts.com/adapters/mootools-adapter.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			http://underscorejs.org/underscore-min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>	
			http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js
		</footer-portlet-javascript>
		<css-class-wrapper>report-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>menu</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<css-class-wrapper>menu-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>assets</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>
			portal
		</control-panel-entry-category>
		<control-panel-entry-weight>1.5</control-panel-entry-weight>
		<action-url-redirect>true</action-url-redirect>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>assets-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>